<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow title="视频分类快捷窗口" xmlns:mx="http://www.adobe.com/2006/mxml"  creationComplete="initApp()" showCloseButton="true"  close="this.closeThis()"  width="574" height="300">
<mx:Script source="as/queryVideoType.as"/>
<mx:RemoteObject id="videoTypeService" destination="videoTypeService" showBusyCursor="true">
		<mx:method name="getQueryVideoType" result="getQueryVideoTypeHandler(event)"/>
</mx:RemoteObject>
<mx:Script>
	<![CDATA[
		import mx.charts.CategoryAxis;
		[Bindable]
		/**
		 * 回调进行赋值
		 * */
		public var fatherFunction:Function;
		/**
		 * 回调进行赋值
		 * */
		public var typeFatherFunction:Function;
		
		/**
		 * 修改视频分类的回调
		 * */
		 public var editTypeFatherFunction:Function;
	]]>
</mx:Script>
<mx:DateFormatter id="dateFormatter" formatString="YYYY-MM-DD"/>
<mx:DateFormatter id="timeFormatter" formatString="YYYY-MM-DD JJ:NN"/>
	<mx:HDividedBox width="100%" height="100%">
		<mx:VBox width="70%" height="100%">
			<mx:Form>
				<mx:HBox width="100%">
		            <mx:FormItem label="分类名称：">
	                	<mx:TextInput id="txtVideoType" width="100"/>
		            </mx:FormItem>
		            <mx:FormItem>
		                <mx:Button label="查询"/>
		            </mx:FormItem>
				</mx:HBox>
	        </mx:Form>
			<mx:DataGrid id="videoTypeSelect" dataProvider="{videoTypes.list}" itemClick="clickHandler(event)"  width="100%" height="100%" >
				<mx:columns>
					<mx:DataGridColumn headerText="分类名称" dataField="typeName"/>
					<mx:DataGridColumn headerText="所属分类" dataField="videoType" labelFunction="getParentTypeName"/>
					<mx:DataGridColumn headerText="视频数量" dataField="videoNum"/>
					<mx:DataGridColumn headerText="创建时间" dataField="createTime" labelFunction="createTimeFormatDate"/>
				</mx:columns>
			</mx:DataGrid>
		</mx:VBox>
	</mx:HDividedBox>
</mx:TitleWindow>